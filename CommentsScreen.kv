<CommentsScreen>:

    FloatLayout:
        orientation: 'vertical'
        id: box

    MDLabel:
        id: label
        halign: "center"
        text_color: "white"
        font_style:"Title"
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}

    MDButton:
        style: "elevated"
        size_hint: (0.10, 0.10)
        pos_hint: {"center_x": .5, "center_y": .12}
        on_release: root.back_to_history()

        MDButtonText:
            text: "вернуться к истории"
            font_size: 30
        MDButtonIcon:
            icon: "chevron-left"
