<ChangePasswordScreen>
    password: password
    label: label

    MDLabel:
        id: label
        text: 'Смена пароля'
        pos_hint:{"center_x":.5,"center_y":.75}
        halign:"center"
        text_color: "pink"
        font_style:"Title"
        

    TextInput:
        id: password
        hint_text: 'Текущий пароль'
        multiline: False
        size_hint: 0.3, 0.07
        pos_hint: {'center_x': .5, 'center_y': .60}


    MDButton:
        halign: "center"
        pos_hint: {'center_x': .5, 'center_y': .3}
        on_release: root.change_password()
        MDButtonText: 
            text:"  Подтвердить "


    MDButton:
        pos_hint: {'center_x': .5, 'center_y': .2}
        halign: "center"
        on_release: root.manager.current = 'main'
        MDButtonText: 
            text:"Вернуться"

